--  ORDER 
CREATE TABLE [Order] (
    OrderID INT PRIMARY KEY IDENTITY(1,1),
    OrderDate DATE,
    OrderStatus NVARCHAR(50),
    Total DECIMAL(10, 2),
    UserID INT,
    VoucherID INT,
    FOREIGN KEY (UserID) REFERENCES Account(UserID),
    FOREIGN KEY (VoucherID) REFERENCES Voucher(VoucherID)
);
