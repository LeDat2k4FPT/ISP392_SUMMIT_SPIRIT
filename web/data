-- ACCOUNT
CREATE TABLE Account (
    UserID INT PRIMARY KEY IDENTITY(1,1),
    FullName NVARCHAR(100),
    Address NVARCHAR(255),
    Password NVARCHAR(100),
    Phone NVARCHAR(20),
    Email NVARCHAR(100),
    Role NVARCHAR(50)
);
