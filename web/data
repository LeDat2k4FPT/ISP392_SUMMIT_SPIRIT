-- REVIEW
CREATE TABLE Review (
    ReviewID INT PRIMARY KEY IDENTITY(1,1),
	UserID INT,
	ProductID INT,
    Rating INT,
    Comment NVARCHAR(MAX),
    ReviewDate DATE,
    FOREIGN KEY (UserID) REFERENCES Account(UserID),
    FOREIGN KEY (ProductID) REFERENCES Product(ProductID)
);
