-- CART
CREATE TABLE Cart (
    CartID INT PRIMARY KEY IDENTITY(1,1),
    UserID INT,
    AttributeID INT,
    Quantity INT,
    FOREIGN KEY (UserID) REFERENCES Account(UserID),
    FOREIGN KEY (AttributeID) REFERENCES ProductAttribute(AttributeID)
);
-- add cart 
