-- PAYMENT 
CREATE TABLE Payment (
    PaymentID INT PRIMARY KEY IDENTITY(1,1),
	OrderID INT UNIQUE,
    PaymentMethod NVARCHAR(50),
    PaymentStatus NVARCHAR(50),
    FOREIGN KEY (OrderID) REFERENCES [Order](OrderID)
);
