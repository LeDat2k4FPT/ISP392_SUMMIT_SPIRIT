-- ORDER DETAILS 
CREATE TABLE OrderDetails (
    OrderDetailID INT PRIMARY KEY,
    OrderID INT,
    AttributeID INT,
    Quantity INT,
    Total DECIMAL(10, 2),
    FOREIGN KEY (OrderID) REFERENCES [Order](OrderID),
    FOREIGN KEY (AttributeID) REFERENCES ProductAttribute(AttributeID)
);
