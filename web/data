-- PRODUCT ATTRIBUTE
CREATE TABLE ProductAttribute (
    AttributeID INT PRIMARY KEY ,
	ProductID INT,
    Color NVARCHAR(50),
    Size NVARCHAR(50),
	Stock INT,
    FOREIGN KEY (ProductID) REFERENCES Product(ProductID)
);
