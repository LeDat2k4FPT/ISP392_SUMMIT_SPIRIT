        <url-pattern>/ManageUserActionController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminCreateUserController</servlet-name>
        <servlet-class>admin.AdminCreateUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminCreateUserController</servlet-name>
        <url-pattern>/AdminCreateUserController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewRevenueController</servlet-name>
