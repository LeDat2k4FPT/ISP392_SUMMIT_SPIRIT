<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <servlet>
        <servlet-name>mnproduct</servlet-name>
        <servlet-class>mnproduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mnproduct</servlet-name>
        <url-pattern>/mnproduct</url-pattern>
    </servlet-mapping>

    <!-- ✅ Cấu hình servlet để xử lý mã giảm giá -->
    <servlet>
        <servlet-name>ApplyDiscountServlet</servlet-name>
        <servlet-class>controllers.ApplyDiscountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyDiscountServlet</servlet-name>
        <url-pattern>/ApplyDiscountServlet</url-pattern>
    </servlet-mapping>

    <!-- Cấu hình session và trang mặc định -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>MainController</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>UpdateOrderStatus</servlet-name>
        <servlet-class>staff.management.order.UpdateOrderStatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateOrderStatus</servlet-name>
        <url-pattern>/UpdateOrderStatus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageUserAccountController</servlet-name>
        <servlet-class>admin.ManageUserAccountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageUserAccountController</servlet-name>
        <url-pattern>/ManageUserAccountController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManageUserActionController</servlet-name>
